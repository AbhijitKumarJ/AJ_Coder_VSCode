{
    "name": "ai-coding-assistant",
    "displayName": "AI Coding Assistant",
    "description": "An AI-powered coding assistant for VSCode",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.84.0"
    },
    "extensionKind": [
        "ui",
        "workspace"
    ],
    "categories": [
        "AI"
    ],
    "publisher": "abhjitkumarj",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/vscode-extension-samples"
    },
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ai-coding-assistant.askAI",
                "title": "Ask AI Assistant"
            }
        ],
        "configuration": {
            "title": "AI Coding Assistant",
            "properties": {
                "aiCodingAssistant.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API Key for the AI service"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "tsc -p ./",
        "lint": "eslint \"src/**/*.ts\"",
        "watch": "tsc -w -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.84.0",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.11.0",
        "esbuild": "^0.21.5",
        "eslint": "^8.57.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "openai": "^4.56.0"
    }
}
